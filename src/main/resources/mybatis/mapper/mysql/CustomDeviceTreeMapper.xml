<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.znv.fssrqs.dao.mysql.CustomDeviceTreeDao">
    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="" separator=";" close="">
            update t_fss_customtree_node
            <set>
                <if test="item.nodeName != null">
                    node_name=#{item.nodeName},
                </if>
                <if test="item.nodeKind != null">
                    node_kind=#{item.nodeKind},
                </if>
                <if test="item.upNodeId != null">
                    up_node_id=#{item.upNodeId},
                </if>
                <if test="item.treeId != null">
                    tree_id=#{item.treeId}
                </if>
            </set>
              where node_id=#{item.nodeId}
        </foreach>
    </update>

    <insert id="insertBatch" parameterType="java.util.List" >
        insert into usmsc.t_fss_customtree_node (node_id, node_name, node_kind, up_node_id, tree_id) values
        <foreach collection="list" item="item"  separator=",">
            (
            #{item.nodeId},
            #{item.nodeName},
            #{item.nodeKind},
            #{item.upNodeId},
            #{item.treeId}
            )
        </foreach>
    </insert>

    <insert id="saveCustomUserGroup" parameterType="com.znv.fssrqs.entity.mysql.CustomUserGroupEntity" keyProperty="treeId" useGeneratedKeys="true">
        insert into usmsc.t_fss_customtree (tree_name,tree_desc,default_tree,system_tree)
        values (#{treeName},#{treeDesc},#{defaultTree},#{systemTree})

    </insert>

    <delete id ="deleteCustomUserGroup" parameterType="Integer">
        delete from usmsc.t_fss_customtree where usmsc.t_fss_customtree.tree_id=#{treeId}

    </delete>
</mapper>